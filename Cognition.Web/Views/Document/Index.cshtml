@model Cognition.Web.ViewModels.DocumentViewViewModel
@{
    ViewBag.PageTitle = Model.Document.Title + " - " + Model.Document.GetFullName();
}



<div class="row">
    <div class="col-md-9">
        <h1>@Model.Document.Title</h1>
        @if (@String.IsNullOrWhiteSpace(Model.Document.Subtitle))
        {
            <h3>@Model.Document.Subtitle</h3>
        }       
    </div>
    <div class="col-md-3 text-right">
        <h1 class="text-muted">@Model.Document.GetFullName()</h1>
    </div>
</div>




<hr />

<div class="row" id="document-container">
   @Html.Partial("_Index", Model)
</div>

@section scripts
{
    <!--Reference the SignalR library. -->
    @Scripts.Render("~/bundles/signalr")
    <!--Reference the autogenerated SignalR hub script. -->
    <script src="/signalr/hubs"></script>
    <script type="text/javascript">
        window.documentId = "@Model.Document.Id";
        window.documentPartialUri = '@Url.Action("IndexPartial",new {id = Model.Document.Id, type = Model.Document.Type})';
    </script>
    @Scripts.Render("~/bundles/document/index")
}

