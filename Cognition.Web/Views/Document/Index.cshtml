@model Cognition.Shared.Documents.Document
@{
    ViewBag.Title = Model.Title;
}


<h1>@ViewBag.Title</h1>
<h3>@Model.Subtitle</h3>


<hr />

<div class="row">
    <div class="col-lg-9 document-display-area">@Html.DisplayForModel("DocumentDefault")</div>
    <div class="col-lg-3 display-sidebar">
        <div class="action-row">
            @Html.ActionLink("Edit","Edit", new {id = Model.Id, type = Model.Type}, new {@class = "btn btn-primary"})
        </div>
        <div id="user-info-container">
            <span class="user-info-label">Created by</span>
            @Html.Action("UserInfo","User", new {id = Model.CreatedByUserId})

        </div>
        @if (Model.LastUpdatedByUserId != null)
        {<div id="user-info-container">
            <span class="user-info-label">Last Updated by</span>
            @Html.Action("UserInfo","User", new {id = Model.LastUpdatedByUserId})
        </div>
        }

        

    </div>
</div>

