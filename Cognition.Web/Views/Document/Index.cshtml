@model Cognition.Shared.Documents.Document
@{
    ViewBag.PageTitle = Model.Title + " - " + Model.GetFullName();
}



<div class="row">
    <div class="col-lg-9">
        <h1>@Model.Title</h1>
        @if (@String.IsNullOrWhiteSpace(Model.Subtitle))
        {
            <h3>@Model.Subtitle</h3>
        }       
    </div>
    <div class="col-lg-3 text-right">
        <h1 class="text-muted">@Model.GetFullName()</h1>
    </div>
</div>




<hr />

<div class="row" id="document-container">
   @Html.Partial("_Index", Model)
</div>

@section scripts
{
    <!--Reference the SignalR library. -->
    @Scripts.Render("~/bundles/signalr")
    <!--Reference the autogenerated SignalR hub script. -->
    <script src="/signalr/hubs"></script>
    <script type="text/javascript">
        window.documentId = "@Model.Id";
        window.documentPartialUri = '@Url.Action("IndexPartial",new {id = Model.Id, type = Model.Type})';
    </script>
    @Scripts.Render("~/bundles/document/index")
}

